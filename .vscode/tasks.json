{
    "version": "2.0.0",
    "tasks": [
        {
            "label": "test_atcoder_sample",
            "group": {
                "kind": "build",
                "isDefault": true
            },
            "type": "shell",
            "command": "${workspaceFolder}/onlinejudge/cptest.sh",
            "args": [
                "${relativeFileDirname}_${fileBasenameNoExtension}",
                "${file}"
            ],
            "problemMatcher": []
        },
        {
            "label": "debug_atcoder_sample",
            "group": {
                "kind": "build",
                "isDefault": true
            },
            "type": "shell",
            "command": "${workspaceFolder}/onlinejudge/cptest_debug.sh",
            "args": [
                "${relativeFileDirname}_${fileBasenameNoExtension}",
                "${file}"
            ],
            "problemMatcher": []
        },
        {
            "type": "cppbuild",
            "label": "C/C++: g++ build active file",
            "command": "/usr/bin/g++",
            "args": [
                "-std=gnu++17",
                "-fdiagnostics-color=always",
                "-fsanitize=undefined,address",
                "-g",
                "-D_GLIBCXX_DEBUG",
                "-DLOCAL",
                "${file}",
                "-o",
                "${fileDirname}/${fileBasenameNoExtension}"
            ],
            "options": {
                "cwd": "${fileDirname}"
            },
            "problemMatcher": [
                "$gcc"
            ],
            "group": "build",
            "detail": "Task generated by Debugger."
        }
    ]
}